{% extends '@App/base.html.twig' %}

{% block body %}
    {% block label %}
        <h1> Liste des Acteurs </h1>
    {% endblock %}
    
      <a class="btn icon-btn btn-success" href="{{ path('acteur_new') }}">Ajouter
          <span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-success"></span>
      </a>
   
        <tbody>
            <ul class="list">
                {% for acteur in acteurs %}
                    <li>
                        <a href="{{ path('acteur_show', { 'id': acteur.id }) }}" class="framelist"  style="background-image: url({{asset(background|default('Img/avatar.gif'))}})">
                            <div class="bg">                    
                                    {{ acteur.nomActeur }}
                                    {{ acteur.prenomActeur }}
                            </div>                    
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </tbody>
    </table>

    
          
      
{% endblock %}
