{% extends '@App/layout.html.twig' %}

{% block body %}
    <h1>Saison list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomsaison</th>
                <th>Numerosaison</th>
                <th>Resumesaison</th>
                <th>Anneeproduction</th>
                <th>Postersaison</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for saison in saisons %}
            <tr>
                <td><a href="{{ path('saison_show', { 'id': saison.id }) }}">{{ saison.id }}</a></td>
                <td>{{ saison.nomSaison }}</td>
                <td>{{ saison.numeroSaison }}</td>
                <td>{{ saison.resumeSaison }}</td>
                <td>{{ saison.anneeProduction }}</td>
                <td>{{ saison.posterSaison }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('saison_show', { 'id': saison.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('saison_edit', { 'id': saison.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('saison_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
